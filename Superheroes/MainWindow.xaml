<Window x:Class="Superheroes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Superheroes"
        mc:Ignorable="d"
        Title="Superheroes" Height="450" Width="800"
        Icon="Assets/icon.ico">
    <Window.Resources>
        <local:ConverterHeroImage x:Key="conversorImagenHeroe"></local:ConverterHeroImage>
        <local:ConverterBackground x:Key="conversorBackground"></local:ConverterBackground>
    </Window.Resources>
    <DockPanel x:Name="dockPanelPrincipal"
               Background="{Binding Path=Heroe, 
            Converter={StaticResource conversorBackground}}"
               Height="419"
               VerticalAlignment="Top">
        <DockPanel 
            DockPanel.Dock="Top"
                   LastChildFill="False">
            <TextBlock x:Name="textBlockNombre"
                       Text="{Binding Path=Nombre}"
                       DockPanel.Dock="Left"/>
            <Image Source="Assets/xmen.png"
                Visibility="{Binding Path=Xmen, 
                Converter={StaticResource conversorImagenHeroe}}"
                   DockPanel.Dock="Right"
                   Width="30"/>
            <Image Source="Assets/avengers.png"
                   Visibility="{Binding Path=Vengador, 
                Converter={StaticResource conversorImagenHeroe}}"
                   DockPanel.Dock="Right"
                   Width="20" />
        </DockPanel>
        
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Image x:Name="imageAtras"
                Source="Assets/arrow.png"
                   Width="20"
                   MouseLeftButtonDown="imageAtras_MouseLeftButtonDown"/>
            <TextBlock x:Name="textBlockNumeroActual"/>
            <TextBlock Text="/"/>
            <TextBlock x:Name="textBlockTotalHeros" />
            <Image Source="Assets/arrow.png"
                   FlowDirection="RightToLeft"
                   Width="20"
                   MouseLeftButtonDown="Image_MouseLeftButtonDown"/>
        </StackPanel>
        <Image  x:Name="imageSuperHeroe"
            Source="{Binding Path=Imagen}" 
                Stretch="Fill"
                Margin="10,10,10,0"
                Height="344"
                VerticalAlignment="Top" />

    </DockPanel>
</Window>
